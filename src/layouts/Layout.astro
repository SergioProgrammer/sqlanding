---
import KeepScrolling from "@/assets/keep-scrolling.svg"
---

<!doctype html>
<html lang="es">
  <head>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>SQ STUDIO | Diseño y Desarrollo</title>
    <meta name="description" content="SQ Studio: Diseño gráfico, desarrollo web y marketing digital para marcas creativas. Creamos identidad visual, sitios modernos y estrategias para crecer online." />
    <meta name="keywords" content="diseño gráfico, desarrollo web, marketing digital, branding, identidad visual, páginas web, creatividad, estudio creativo, SQ Studio" />
    <meta name="author" content="SQ Studio" />
    <meta property="og:title" content="SQ STUDIO | Diseño y Desarrollo" />
    <meta property="og:description" content="Diseño gráfico, desarrollo web y marketing digital para marcas creativas. Creamos identidad visual, sitios modernos y estrategias para crecer online." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://sqstudio.es/" />
    <meta property="og:image" content="https://sqstudio.es/og-image.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="SQ STUDIO | Diseño y Desarrollo" />
    <meta name="twitter:description" content="Diseño gráfico, desarrollo web y marketing digital para marcas creativas. Creamos identidad visual, sitios modernos y estrategias para crecer online." />
    <meta name="twitter:image" content="https://sqstudio.es/og-image.jpg" />
  </head>
  <body>
    <slot />
    <KeepScrolling
      class="fixed bottom-3 right-0 left-0 mx-auto text-orange-300 drop-shadow-2xl animate-bounce-pulse"
    />
    <!-- Menú hamburguesa y menú desplegable SIEMPRE al final del body -->
    <div x-data="{ open: false }" class="fixed top-4 right-4 z-[99999] pointer-events-auto">
      <button
        @click="open = !open"
        class="flex flex-col justify-center items-center w-12 h-12 rounded-full bg-yellow-200 shadow-lg hover:bg-yellow-300 transition"
        aria-label="Abrir menú"
      >
        <span class="block w-8 h-1 bg-[#f79b33] rounded mb-1"></span>
        <span class="block w-8 h-1 bg-[#f79b33] rounded mb-1"></span>
        <span class="block w-8 h-1 bg-[#f79b33] rounded"></span>
      </button>
      <div
        x-show="open"
        @click.away="open = false"
        class="mt-3 w-48 bg-yellow-200 rounded-xl shadow-xl flex flex-col gap-2 p-4 text-right absolute right-0 top-14 border border-[#f79b33] transition z-[99999]"
        x-transition
      >
        <a href="/cursos" class="text-[#042e36] text-2xl font-semibold hover:underline">Cursos</a>
        <a href="/contacto" class="text-[#042e36]  text-2xl font-semibold hover:underline">Contacto</a>
        <a href="https://instagram.com/sqstudiodm" target="_blank" rel="noopener" class="text-[#042e36] text-2xl font-semibold hover:underline">
          Conócenos
        </a>
      </div>
    </div>
  </body>
</html>

<style is:global>
  @import "tailwindcss";

  @theme {
    --font-sans: "GTA", system-ui, sans-serif;
    --font-narrow: "GTANarrow", system-ui, sans-serif;

    --animate-bounce-pulse: bounce-pulse 2s ease-in-out infinite;
  }

  @keyframes bounce-pulse {
    0% {
      transform: translateY(0);
      scale: 0.8;
      opacity: 0.8;
    }

    50% {
      transform: translateY(-5px);
      opacity: 1;
      scale: 1;
    }

    100% {
      transform: translateY(0);
      scale: 0.8;
      opacity: 0.8;
    }
  }

  html,
  body {
    background: #111;
    height: 300vh;
    overflow-x: hidden;
    overscroll-behavior: none;
    color: white;
    margin: 0;
    width: 100%;
  }

  
</style>

