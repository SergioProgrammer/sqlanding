---
// Importaciones
import { Image } from "astro:assets";
import Logo from "../assets/hero-key-logo.svg";

// Lista de logos de redes o socios
const logos = [
  { name: "Instagram", src: "../public/instagram.svg", link: "https://instagram.com" },
  { name: "LinkedIn", src: "../public/linkedin.svg", link: "https://linkedin.com" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1140px] mx-auto">
    <div class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]">
      <div>
        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px] text-white">
          <div class="flex text-center lg:text-start flex-col w-full lg:w-[30%]">
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">Contáctanos</h3>
            <div class="flex flex-col justify-between gap-4">
              <span>Email: info@saraquintana.es</span>
              <span>Phone: +34 677 036 164</span>
              <span class="lg:w-3/4">Dirección: Santa Cruz de Tenerife</span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <!-- Puedes agregar algo aquí si necesitas -->
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>

      <!-- Footer con logo -->
      <div class="flex flex-col-reverse md:flex-row h-20 items-center justify-between mt-4 text-center text-amber-50">
        <span class="mt-4 md:mt-0">
          2025 SQStudio Todos los derechos reservados - Created by  
          <a class="underline ml-1" target="_blank" href="https://www.instagram.com/@sqstudiodm">
            SQSTUDIO
          </a>
        </span>

        <!-- Logo al lado derecho -->
        <Image src={Logo} alt="SQStudio Logo" class="w-36 h-36" />
      </div>
    </div>
  </div>
</section>
